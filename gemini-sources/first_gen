// --- MAIN APP COMPONENT ---

const App = () => {
  const [currentPage, setCurrentPage] = useState('home');

  return (
    <div className="min-h-screen bg-[#020408] text-white font-sans selection:bg-[#0062d1] selection:text-white overflow-x-hidden w-full">
      <style>{customStyles}</style>
      <div className="fixed inset-0 pointer-events-none z-0">
         <div className="absolute top-[-20%] left-1/2 -translate-x-1/2 w-[120%] sm:w-[80%] h-[400px] sm:h-[600px] bg-[#0062d1] rounded-[100%] blur-[80px] sm:blur-[120px] opacity-[0.15]"></div>
         <div className="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-10 mix-blend-overlay"></div>
      </div>
      
      <Navbar onNavigate={setCurrentPage} />
      
      {currentPage === 'home' && <LandingPage />}
      {currentPage === 'web-mobile' && <SolutionWebMobile onNavigate={setCurrentPage} />}
      
      <GlobalContactSection />
      <Footer onNavigate={setCurrentPage} />
    </div>
  );
};

export default App;